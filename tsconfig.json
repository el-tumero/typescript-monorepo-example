{
  "compilerOptions": {
    "target": "ES2016",
    "module": "ES6",   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                     
    "skipLibCheck": true,                                
    "moduleResolution": "Node",
    "baseUrl": "./packages",
    "paths": {
      "@product/core/*": ["core/src/*"],
      "@product/utils/*": ["utils/src/*"],

    },
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": ["./src/*"],
  "exclude": ["./node_modules/*"],
  "files": [],
  "references": [
    {
      "path": "./packages/core/"
    },
    {
      "path": "./packages/utils/"
    }
  ]
}
